<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="1º número:" GridPane.columnIndex="1" GridPane.columnSpan="2" />
      <TextField fx:id="txtValue1" promptText="Insira um número" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label text="2º número:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="txtValue2" promptText="Insira um número" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="Resultado:" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Label fx:id="lblRes" text="0.0" GridPane.columnIndex="3" GridPane.rowIndex="4" />
      <HBox spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
         <children>
            <Button mnemonicParsing="false" onAction="#sum" text="+" />
            <Button mnemonicParsing="false" onAction="#sub" text="-">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#multi" text="x" />
            <Button mnemonicParsing="false" onAction="#div" text="/" textAlignment="CENTER" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </HBox>
   </children>
   <padding>
      <Insets right="8.0" top="8.0" />
   </padding>
</GridPane>
